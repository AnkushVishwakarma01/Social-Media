<% for(let j = 0; j < data.length; j++){ %>
    <div class="posts">
        <div class="post-info">
            <img src="/images/default_pic.png" class="short_profile_pic">
            <span><%= data[j].email %></span>
        </div>
        <img src="/images/<%= data[j].post %>" alt="Image Not Found" />
        <form action="/like" method="post">
            <input type="hidden"  name="post_id" value="<%= data[j]._id %>" >
            <input type="hidden" name="post_email" value="<%= data[j].email %>">
            <button class="btn2 sec-btn mb-5"><i class="fa-solid fa-heart"></i></button>
        </form>
        <form action="/commentHandler" method="post">
            <input type="hidden" name="id" value="<%= data[j]._id %>">
            <input type="hidden" name="email" value="<%= data[j].email %>">
            <input type="text" name="comment" class="search" placeholder="Enter Comment">
            <button class="btn2 sec-btn mb-5"><i class="fa-solid fa-comment"></i></button>
        </form>
        <div class="comment-area">
            <% for(let i = 0; i < comments.length; i++){ %>
                <% if(data[j]._id == comments[i].post){ %>
                    <div>
                        <div class="comment-info">
                            <img src="/images/default_pic.png" class="shorter_profile_pic">
                            <span><%= comments[i].from %></span>
                        </div>
                        <div class="commentBox">
                            <p><%= comments[i].comment %></p>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
<% } %>